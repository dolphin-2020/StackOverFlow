<script type="text/javascript">
    layui.use(['laypage', 'jquery', 'layer'], function () {
        var laypage = layui.laypage,
            jquery = layui.jquery,
            layer = layui.layer;

        laypage.render({
            elem: 'divPage',
            curr: @page.PageIndex,
            count: @page.DataCount,
            limit: @page.PageSize,
            limits: [7,10,15, 20,25, 30], 
            layout: ['prev', 'page', 'next', 'limit'],
            groups: 10,
            jump: function (obj, first) { 
                if (!first) {
                    location.href = "/home/index/" + obj.limit +"/"+ obj.curr;
                }
            }
        });
    });
    //auto conpelet
    $(function () {

        $("html").click(function () {
            $("#ulList").html("");
        })
        $("#txtContent").click(function () {
            
            var key = this.value;
            if (key == "") {
                $("#ulList").html("");
                return;
            };
            $.ajax({
                //url: "UserInfo/GetUsers?key=" + key,
                url: "/Home/GetUsers",
                type: "post",
                dataType: "json",
                data: { "key": key },
                success: function (data) {
                    $("#ulList").html("");
                    $.each(data, function (i, item) {
                        $("#ulList").append("<li><a href='#'>" + item.userName + "</a></li>")
                    })
                }
            });
        });

        $("#txtContent").keyup(function () {
            var key = this.value;
            if (key == "") {
                $("#ulList").html("");
                return;
            }
            $.ajax({
                //url: "UserInfo/GetUsers?key=" + key,
                url: "/Home/GetUsers",
                type: "post",
                dataType: "json",
                data: { "key": key },
                success: function (data) {
                    $("#ulList").html("");
                    $.each(data, function (i, item) {
                        $("#ulList").append("<li><a href='#'>" + item.userName + "</a></li>")
                    })
                }
            });
        });
    });

    layui.use('form', function () {
        var form = layui.form;

        form.on('submit(formDemo)', function (data) {
            layer.msg(JSON.stringify(data.field));
            return false;
        });
    });
</script>
